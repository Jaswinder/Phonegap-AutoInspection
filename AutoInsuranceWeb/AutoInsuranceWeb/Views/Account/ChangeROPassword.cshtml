

@{
    ViewBag.Title = "Change RO Password";
}
<script type="text/javascript">
    function Validate() {
        var password = document.getElementById("txtPassword").value;
        var confirmPassword = document.getElementById("txtConfirmPassword").value;
        if (password != confirmPassword && password.value != "" && confirmPassword !="" ) {
            alert("Passwords do not match.");
            return false;
        }
        return true;

    }
</script>
<!-- Content Header (Page header) -->
<section class="content-header">
    @*<h1>
        Edit 
        <small>Control panel</small>
    </h1>*@
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->

   @using (Html.BeginForm("ChangeROPasswordSave", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
   {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Change Password RO</h4>
            <hr />

        
            <input type="password" id="txtId" name="txtIdName" value="@(ViewBag.USerIDToForPassword)" style="visibility:hidden;"/>

            <div class="form-group">
               
                <div class="col-md-10">
       
                    <input type="password" placeholder="Password" id="txtPassword" />
                </div>
            </div>
            <div class="form-group">
               
                <div class="col-md-10">
    
                    <input type="password" name="txtConfirmPassword" placeholder="Confirm Password" id="txtConfirmPassword" />
                </div>
            </div>
          

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" onclick="return Validate()" class="btn btn-primary" />
                </div>
            </div>
        </div>
   }


   
    </section>
